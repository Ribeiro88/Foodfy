{% extends "includes/layout.njk" %}

{% block content %}

<section class="recipes">
    <div class="recipe-show-info" style="padding-bottom:70px">
       <h3>Gerenciar receitas</h3>
        <a href="/admin/recipes/create">Adicionar receita</a>
    </div>
    <div class="cards-content">
        {% for recipe in recipes %} 

            <div class="card">
                <div class="card-image-container">
                    <img src="{{recipe.img}}" alt="{{recipe.title}}">
                </div>
                <div class="card-content">
                    <h3>{{recipe.title}}</h3>
                    <p>por {{recipe.author}}</p>
                    <a href="/admin/recipes/{{recipe.id}}" alt="{{recipe.title}}" title="{{recipe.title}}">Visualizar</a>
                </div>
            </div>
       
        {% endfor %}
    </div>
</section>

{% endblock content %}
