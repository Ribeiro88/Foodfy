<div class="item">
    <div>Imagem da receita</div>
    <div>
        <div class="foto_content">
            <div id="photos-upload">
                <input id="photos-input" type="file" name="fotos" multiple accept="image/*"  onchange="PhotosUpload.handleFileInput(event, 5)" />
                <p><i class="material-icons">add</i></p>
            </div>
            <div id="photos-preview">
                {% if recipe.images %}
                    {% for image in recipe.images %}
                        <div class="photo" id="{{image.id}}">
                            <img src="{{image.src}}" alt="{{image.name}}" />
                            <i class="material-icons" onclick="PhotosUpload.removeOldPhoto(event)">close</i>
                        </div>
                    {% endfor %}
                    <input type="hidden" name="removed_files" />
                {% endif %}
            </div>
        </div>
    </div>
</div>
<div class="item">
    <div>Nome</div>
    <div><input type="text" name="title" value="{{recipe.title}}" /></div>
</div>
<div class="item">
    <div>Chef</div>
    <div>
        <select name="chef">
            {% for chef in chefs %}
                <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %}selected{% endif %}>
                    {{chef.name}}
                </option>
            {% endfor %}
        </select>
    </div>
</div>
<div class="item">
    <div>Ingredientes</div>
    <div id="ingredients">
        {% if recipe %}
            {% for ingredients in recipe.ingredients %}
                <div class="ingredient"><input type="text" name="ingredients[]" value="{{ingredients}}" /></div>
            {% endfor %}
        {% else %}
            <div class="ingredient"><input type="text" name="ingredients[]" value="{{ingredients}}" /></div>
        {%  endif   %}    
    </div>
    <div><button type="button" class="add-ingredient">Adicionar novo ingrediente</button></div>
</div>
<div class="item">
    <div>Modo de preparo</div>
    <div id="preparation">
        {% if recipe %}
            {% for preparation in recipe.preparation %}
                <div class="preparation"><input type="text" name="preparation[]" value="{{preparation}}" /></div>
            {% endfor %}
        {% else %}
                <div class="preparation"><input type="text" name="preparation[]" value="{{preparation}}" /></div>
        {% endif %}
    </div>
    <div><button type="button" class="add-preparation">Adicionar novo passo</button></div>
</div>
<div class="item">
    <div>Informações adicionais</div>
    <div><textarea name="information" rows="8" class="area_information">{{recipe.information}}</textarea></div>
</div>
