{% extends "includes/layout.njk" %}

{% block content %}

<section class="recipes">
    <form id="put-form" action="/admin/users?_method=PUT" method="POST">
        <div class="recipe-show-info" style="padding-bottom:70px; grid-template-columns: 3fr 0.5fr 0.5fr;">
        <h3>Atualizar Usu√°rio {{user.name}}</h3>
            <button style="background:rgba(220,71,71,1);" form="form-delete">Deletar</button>
            <button type="submit" form="put-form">Salvar</button>
        </div>
        <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px">
            {% include './register_fields.njk' %}
            <div class="item">
                <div>Senha</div>
                <div class="input">
                    <input type="password" name="password" placeholder="Digite sua nova senha caso queira atualizar seu cadastro" value="">
                </div>
            </div>
            <div class="item" style="padding-top: 30px;">
                <div><input type="checkbox" class="check" style="width: 15px; height:15px; position: relative; top: 2px;"
                {% if user.is_admin == true %}checked {% endif %} value="{{user.is_admin}}" name="is_admin">  Administrador</div>
            </div>

            <input type="hidden" name="id" value={{user.id}}> 
        </div>
    </form>
    <form id="form-delete" action="/admin/users?_method=DELETE" method="POST">
        <input type="hidden" name="id" value={{user.id}}>  
    </form>
</section>


<script src="/js/validation.js"></script>
<script src="/js/delete.js"></script>
        
{% endblock content %}