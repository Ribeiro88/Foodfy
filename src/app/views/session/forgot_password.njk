{% extends "includes/layout_login.njk" %}
{% block content %}
<section class="logar">
    <form method="POST" action="/sessions/forgot_password">
        <div class="form_logar">
            <div class="header">
                <div class="logo_login">
                    <img src="/images/Foodfy_login.png" alt="Login Foodfy">
                </div>
                <h3>Esqueceu a Senha?</h3>
            </div>
            <div class="form_control">
                <div class="item">
                    <div>Email</div>
                    <div style="padding: 0px 0px 30px 0px;"><input type="email" name="email" placeholder="Digite o email cadastrado"></div>
                    <div class="form_buttons" style="grid-template-columns: 1fr; justify-items: end;">
                        <button class="btn_login" type="submit"><b>Recuperar Senha</b></button>
                    </div>
                </div>   
            </div>
        </div>     
    </form>
</section>
{% endblock content %}